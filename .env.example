MONGODB_URI=mongodb://localhost:27017/product_warranty_db
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-here
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Storage Configuration
# Options: 'local' (default for development) or 's3' (recommended for production)
STORAGE_TYPE=local

# AWS S3 Configuration (required if STORAGE_TYPE=s3)
# Get these from your AWS IAM user credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your-bucket-name

# Example for production:
# STORAGE_TYPE=s3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# AWS_S3_BUCKET_NAME=my-product-warranty-bucket